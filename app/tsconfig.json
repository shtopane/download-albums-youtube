{
    "compilerOptions": {
        "moduleResolution": "node",
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "module": "es6",
        "target": "es5",
        "outDir": "./build",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "lib": [
            "dom.iterable",
            "dom",
            "es6"
        ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}